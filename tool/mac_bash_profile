#export TERM="xterm-256color"
function _update_ps1() {
    PS1="$(/Users/libinbin/go/bin/powerline-go  -error $?)"
}

if [ "$TERM" != "linux" ] && [ -f "/Users/libinbin/go/bin/powerline-go" ]; then
    PROMPT_COMMAND="_update_ps1; $PROMPT_COMMAND"
fi

